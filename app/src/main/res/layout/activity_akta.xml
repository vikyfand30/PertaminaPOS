<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="Akta Perusahaan"
                android:textColor="@color/cherry_red"
                android:textSize="14sp" />
        </FrameLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Distributor Name"
            android:textColor="@color/leafy_green"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_distributor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border_form"
            android:hint="Masukkan Nama Distributor Anda"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textSize="12sp" />


        <!-- PIN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No Akta"
            android:textColor="@color/leafy_green"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_no_akta"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border_form"
            android:hint="Cth : 7171xxxxxxx"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Jenis Akta"
            android:textColor="@color/leafy_green"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_jenis_akta"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border_form"
            android:hint="Cth : PT"
            android:imeOptions="actionDone"
            android:inputType="datetime"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tanggal Akta Berlaku"
            android:textColor="@color/leafy_green"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_tgl_akta"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border_form"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="Cth : xxxx/xx/xx"
            android:imeOptions="actionDone"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/jancuk"
            android:textColor="@color/leafy_green"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/txt_akta_pengesahan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border_form"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="Cth : xxxx/xx/xx"
            android:imeOptions="actionDone"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Upload FIle Akta"
            android:textColor="@color/leafy_green"
            android:textSize="10sp" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_upload"
            android:background="@drawable/rounded_fill_green"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="Upload"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:text="BACK"
            android:textColor="@color/leafy_green" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:text="NEXT"
            android:textColor="@color/leafy_green" />

    </RelativeLayout>
</RelativeLayout>